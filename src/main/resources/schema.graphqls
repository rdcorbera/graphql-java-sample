directive @fetch(from : String!) on FIELD_DEFINITION

type Query {
    books(publicationAfter: String): [Book]
    bookById(id: ID): Book
}

type Book {
    id: ID
    name: String
    totalPages: Int @fetch(from:"pageCount")
    publicationDate: String
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}